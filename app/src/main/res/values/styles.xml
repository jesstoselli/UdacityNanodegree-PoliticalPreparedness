<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorError">@color/red</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="titleTextAppearance">@style/ToolBarStyle.Title</item>
    </style>

    <style name="ToolBarStyle.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MediumStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_standard</item>
    </style>

    <style name="ButtonStyle" parent="MediumStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corners_purple</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="SmallButtonStyle" parent="MediumStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corners_blue</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="HeaderStyle" parent="MediumStyle">
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>
